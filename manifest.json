{
  "manifest_version": 3,
  "name": "Blackboard 智能聚合器",
  "version": "1.0.0",
  "description": "一键抓取并整合所有Blackboard课程的公告、作业和新内容。",
  "permissions": [
    "storage",      
    "scripting",    
    "tabs",         
    "alarms"
  ],
  "host_permissions": [
    "https://bb.cuhk.edu.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
